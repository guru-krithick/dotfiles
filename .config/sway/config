# Sway Config - Main
# Modular configs loaded from config.d/

# Variables
set $mod Mod4
set $left h
set $down j
set $up k
set $right l

set $term ghostty
set $browser zen-browser
set $menu wofi

set $pics ${XDG_PICTURES_DIR:-$HOME/Pictures}
set $vids ${XDG_VIDEOS_DIR:-$HOME/Recordings}
set $conf ${XDG_CONFIG_HOME:-$HOME/.config}/sway
set $scripts $conf/scripts

# Font
font pango:JetBrainsMono Nerd Font 14

# Load theme first (defines color variables)
include ~/.config/sway/config.d/theme

# Appearance
output * bg $HOME/.config/sway/wallpaper.jpg fill

default_border pixel 2
default_floating_border pixel 2
titlebar_padding 1
titlebar_border_thickness 0
hide_edge_borders smart
smart_borders on
smart_gaps on
gaps inner 8
gaps outer 4

# Window colors
client.focused          $ac $ac $bg $ac $ac
client.focused_inactive $in $in $fg $in $in
client.unfocused        $in $in $fg $in $in
client.urgent           $ur $ur $bg $ur $ur
client.placeholder      $bg $bg $fg $bg $bg
client.background       $bg

# Bar
bar {
    swaybar_command waybar
}

# Load modular configs
include /etc/sway/config.d/*
include ~/.config/sway/config.d/input
include ~/.config/sway/config.d/rules
include ~/.config/sway/config.d/autostart
include ~/.config/sway/config.d/keybinds

