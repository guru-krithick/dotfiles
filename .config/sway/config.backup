# ╔══════════════════════════════════════════════════════════════════════════════╗
# ║                              SWAY CONFIGURATION                              ║
# ║                    Copy this to ~/.config/sway/config                        ║
# ║                   Read `man 5 sway` for complete reference                   ║
# ╚══════════════════════════════════════════════════════════════════════════════╝

# ┌──────────────────────────────────────────────────────────────────────────────┐
# │                               CORE VARIABLES                                 │
# └──────────────────────────────────────────────────────────────────────────────┘

# Modifier key (Windows/Super key)
set $mod Mod4

# Vim-style directional keys
set $left  h
set $down  j
set $up    k
set $right l

# Applications
set $term     ghostty
set $rofi_cmd rofi
set $menu     $rofi_cmd -show drun -display-drun "Apps"
set $code     code
set $browser  vivaldi
set $nvim     nvim
set $ranger   ranger

# Dynamic directories
set $pictures_dir ${XDG_PICTURES_DIR:-$HOME/Pictures}
set $videos_dir ${XDG_VIDEOS_DIR:-$HOME/recordings}
set $config_dir ${XDG_CONFIG_HOME:-$HOME/.config}/sway

# Error log
set $error_log $HOME/.sway_errors.log

# ┌──────────────────────────────────────────────────────────────────────────────┐
# │                              VISUAL SETTINGS                                 │
# └──────────────────────────────────────────────────────────────────────────────┘

# Window opacity settings
for_window [app_id="foot"] opacity 0.95
exec swaymsg opacity 0.95

# ┌──────────────────────────────────────────────────────────────────────────────┐
# │                              STARTUP PROGRAMS                                │
# └──────────────────────────────────────────────────────────────────────────────┘

# Status bar (restart safely)
exec_always killall waybar; waybar

# Wallpaper
exec_always swaybg -c "#222222"

# Notification manager
exec dunst

# Clipboard manager
exec wl-paste --type text --watch cliphist store
exec wl-paste --type image --watch cliphist store

# Consolidated screen sharing setup
exec_always {
  dbus-update-activation-environment --systemd WAYLAND_DISPLAY XDG_CURRENT_DESKTOP=sway
  systemctl --user import-environment WAYLAND_DISPLAY XDG_CURRENT_DESKTOP
}

# ┌──────────────────────────────────────────────────────────────────────────────┐
# │                             DISPLAY CONFIGURATION                            │
# └──────────────────────────────────────────────────────────────────────────────┘

# Dynamic monitor setup
exec_always $config_dir/scripts/configure-outputs.sh

# ┌──────────────────────────────────────────────────────────────────────────────┐
# │                        CAFFEINE-LIKE FUNCTIONALITY                           │
# └──────────────────────────────────────────────────────────────────────────────┘

# Toggle swayidle to prevent idle actions
bindsym $mod+c exec ~/.config/sway/scripts/caffeine-toggle.sh

# ┌──────────────────────────────────────────────────────────────────────────────┐
# │                              INPUT CONFIGURATION                             │
# └──────────────────────────────────────────────────────────────────────────────┘

input type:touchpad {
  tap enabled
  natural_scroll enabled
  scroll_method two_finger
  dwt enabled
}

# ┌──────────────────────────────────────────────────────────────────────────────┐
# │                             APPLICATION SHORTCUTS                            │
# └──────────────────────────────────────────────────────────────────────────────┘

# Terminal
bindsym $mod+t exec $term || echo "Failed to launch $term" >> $error_log

# Code Editor (VS Code)
bindsym $mod+Shift+w exec "command -v $code >/dev/null && $code || (echo 'VS Code not installed' >> $error_log && notify-send 'VS Code not installed')"

# Web Browsers  
bindsym $mod+Shift+x exec "command -v $browser >/dev/null && $browser || (firefox || (echo 'No browser available' >> $error_log && notify-send 'No browser available'))"
bindsym $mod+Shift+f exec firefox || echo "Failed to launch firefox" >> $error_log
bindsym $mod+Shift+b exec google-chrome-stable || echo "Failed to launch google-chrome-stable" >> $error_log

# Terminal Editor (Neovim)
bindsym $mod+Shift+n exec $term -e $nvim || echo "Failed to launch $nvim in $term" >> $error_log

# File Explorer (ranger)
bindsym $mod+Shift+r exec $term -e $ranger || echo "Failed to launch $ranger in $term" >> $error_log

# File Manager (GUI)
bindsym $mod+Shift+e exec dolphin || echo "Failed to launch dolphin" >> $error_log

# Application Launchers
bindsym $mod+d exec $rofi_cmd -show drun -display-drun "Apps" || echo "Failed to launch rofi drun" >> $error_log
bindsym $mod+Shift+d exec $rofi_cmd -show run -display-run "Run" || echo "Failed to launch rofi run" >> $error_log
bindsym $mod+Tab exec $rofi_cmd -show window -display-window "Windows" || echo "Failed to launch rofi window" >> $error_log

# ┌──────────────────────────────────────────────────────────────────────────────┐
# │                              MEDIA & VOLUME CONTROLS                         │
# └──────────────────────────────────────────────────────────────────────────────┘

# Audio Controls
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle || echo "Audio mute failed" >> $error_log
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5% || echo "Volume up failed" >> $error_log
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5% || echo "Volume down failed" >> $error_log

# Brightness Controls
bindsym XF86MonBrightnessDown exec brightnessctl set 5%- || echo "Brightness down failed" >> $error_log
bindsym XF86MonBrightnessUp exec brightnessctl set +5% || echo "Brightness up failed" >> $error_log

# ┌──────────────────────────────────────────────────────────────────────────────┐
# │                              SCREENSHOT CONTROLS                             │
# └──────────────────────────────────────────────────────────────────────────────┘

# Full screen screenshot
bindsym Print exec grim "$pictures_dir/screenshot-$(date +%s).png" && grim - | wl-copy && notify-send "Screenshot taken and copied to clipboard" || echo "Full screenshot failed" >> $error_log

# Area selection screenshot
bindsym $mod+Shift+s exec grim -g "$(slurp)" - | wl-copy && notify-send "Screenshot copied to clipboard" || echo "Area screenshot failed" >> $error_log

# Screen recording (using wf-recorder)
bindsym $mod+Shift+Print exec mkdir -p "$videos_dir" && wf-recorder -f "$videos_dir/recording-$(date +%Y-%m-%d-%H-%M-%S).mp4" || echo "Screen recording failed" >> $error_log

# ┌──────────────────────────────────────────────────────────────────────────────┐
# │                              SYSTEM ACTIONS                                  │
# └──────────────────────────────────────────────────────────────────────────────┘

# Power Management
bindsym $mod+Ctrl+u exec shutdown now
bindsym $mod+Ctrl+l exec "swaylock -f --config $config_dir/swaylock/config && systemctl suspend"
bindsym $mod+Escape exec "$rofi_cmd -show power-menu -modi power-menu:$config_dir/scripts/power-menu.sh" || echo "Power menu failed" >> $error_log

# Window Management
bindsym $mod+q kill
bindsym $mod+Shift+c reload

# Mouse settings
floating_modifier $mod normal

# ┌──────────────────────────────────────────────────────────────────────────────┐
# │                              WINDOW NAVIGATION                               │
# └──────────────────────────────────────────────────────────────────────────────┘

# Focus Movement (Vim keys)
bindsym $mod+$left  focus left
bindsym $mod+$down  focus down
bindsym $mod+$up    focus up
bindsym $mod+$right focus right

# Focus Movement (Arrow keys)
bindsym $mod+Left  focus left
bindsym $mod+Down  focus down
bindsym $mod+Up    focus up
bindsym $mod+Right focus right

# Window Movement (Vim keys)
bindsym $mod+Shift+$left  move left
bindsym $mod+Shift+$down  move down
bindsym $mod+Shift+$up    move up
bindsym $mod+Shift+$right move right

# Window Movement (Arrow keys)
bindsym $mod+Shift+Left  move left
bindsym $mod+Shift+Down  move down
bindsym $mod+Shift+Up    move up
bindsym $mod+Shift+Right move right

# ┌──────────────────────────────────────────────────────────────────────────────┐
# │                              WORKSPACE NAVIGATION                            │
# └──────────────────────────────────────────────────────────────────────────────┘

# Switch to workspace
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10

# Move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 10

# ┌──────────────────────────────────────────────────────────────────────────────┐
# │                               WINDOW LAYOUTS                                 │
# └──────────────────────────────────────────────────────────────────────────────┘

# Layout Controls
bindsym $mod+b splith
bindsym $mod+v splitv
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# Fullscreen and Floating
bindsym $mod+f fullscreen
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle

# Focus parent container
bindsym $mod+a focus parent

# ┌──────────────────────────────────────────────────────────────────────────────┐
# │                                SCRATCHPAD                                    │
# └──────────────────────────────────────────────────────────────────────────────┘

bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show

# ┌──────────────────────────────────────────────────────────────────────────────┐
# │                                RESIZE MODE                                   │
# └──────────────────────────────────────────────────────────────────────────────┘

mode "resize" {
  # Resize with Vim keys
  bindsym $left  resize shrink width 10px
  bindsym $down  resize grow height 10px
  bindsym $up    resize shrink height 10px
  bindsym $right resize grow width 10px

  # Resize with Arrow keys
  bindsym Left  resize shrink width 10px
  bindsym Down  resize grow height 10px
  bindsym Up    resize shrink height 10px
  bindsym Right resize grow width 10px

  # Return to default mode
  bindsym Return mode "default"
  bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# ┌──────────────────────────────────────────────────────────────────────────────┐
# │                              CLIPBOARD MANAGEMENT                            │
# └──────────────────────────────────────────────────────────────────────────────┘

# Clipboard history with script
bindsym $mod+Shift+v exec $config_dir/scripts/clipboard-manager.sh copy || echo "Clipboard copy failed" >> $error_log
bindsym $mod+Shift+Delete exec $config_dir/scripts/clipboard-manager.sh delete || echo "Clipboard delete failed" >> $error_log
bindsym $mod+Ctrl+Delete exec cliphist wipe && notify-send "Clipboard history cleared" || echo "Clipboard wipe failed" >> $error_log

# ┌──────────────────────────────────────────────────────────────────────────────┐
# │                              ADDITIONAL CONFIGURATIONS                       │
# └──────────────────────────────────────────────────────────────────────────────┘

# Include additional configuration files
include '$(/usr/libexec/sway/layered-include \
  "/usr/share/sway/config.d/*.conf" \
  "/etc/sway/config.d/*.conf" \
  "${XDG_CONFIG_HOME:-$HOME/.config}/sway/config.d/*.conf")'

# ┌──────────────────────────────────────────────────────────────────────────────┐
# │                                  NOTES                                       │
# └──────────────────────────────────────────────────────────────────────────────┘

# Configuration hierarchy:
#  - /usr/share/sway/config.d     (system defaults)
#  - /etc/sway/config.d           (system overrides)
#  - ~/.config/sway/config.d      (user overrides)
#
# To disable default bars:
#     echo -n > "$HOME/.config/sway/config.d/90-bar.conf"
#
# To debug errors, check $HOME/.sway_errors.log
#
# Install dependencies:
#     yay -S visual-studio-code-bin vivaldi lazygit ranger jq

# ╔══════════════════════════════════════════════════════════════════════════════╗
# ║                               END OF CONFIG                                  ║
