set $fg          #c0c0c0
set $fg_dim      #757575
set $border      #4a4a4a
set $accent      #e8e8e8
set $urgent      #a08080

output * bg $HOME/Pictures/wallpaper.jpg fill

default_border pixel 2
default_floating_border pixel 2
titlebar_padding 8 6
titlebar_border_thickness 0
hide_edge_borders smart
smart_borders on
smart_gaps on
gaps inner 8
gaps outer 4
gaps top 10

# class                 border    bg       text     indicator  child_border
client.focused          $border   $bg_alt  $fg      $border    $border
client.focused_inactive $bg       $bg      $fg_dim  $bg        $bg
client.unfocused        $bg       $bg      $fg_dim  $bg        $bg
client.urgent           $urgent   $urgent  $bg      $urgent    $urgent
client.placeholder      $bg       $bg      $fg      $bg        $bg
client.background       $bg

