set $gnome_schema org.gnome.desktop.interface

exec_always {
    gsettings set $gnome_schema gtk-theme 'Adwaita-dark'
    gsettings set $gnome_schema icon-theme 'Papirus-Dark'
    gsettings set $gnome_schema cursor-theme 'default'
    gsettings set $gnome_schema cursor-size 24
    gsettings set $gnome_schema font-name 'Sans 10'
}

exec systemctl --user import-environment DISPLAY WAYLAND_DISPLAY SWAYSOCK XDG_CURRENT_DESKTOP
exec dbus-update-activation-environment --systemd DISPLAY WAYLAND_DISPLAY SWAYSOCK XDG_CURRENT_DESKTOP=sway

exec wl-paste --type text --watch cliphist store
exec wl-paste --type image --watch cliphist store

exec /usr/lib/xdg-desktop-portal-wlr
exec /usr/lib/xdg-desktop-portal-gtk
exec /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
exec mako

exec swayidle -w \
    timeout 300 'swaylock -f -C ~/.config/swaylock/config' \
    timeout 600 'swaymsg "output * power off"' \
    resume 'swaymsg "output * power on"' \
    before-sleep 'swaylock -f -C ~/.config/swaylock/config'

